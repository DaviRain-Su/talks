{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/bun"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
